//Descripcion: programa que permite al usuario introducir n numeros naturales y que muestra el promedio de los numeros impares.

#include <iostream>
#include <conio.h>
using namespace std;

int main()
{   int n,a,i,contador=0,promedio=0;
    cout << "Introducir la cantidad de numeros que desea introducir: ";
  cin >> n;
    for(i=1;i<=n;i++)
	{  cout << "numero "<< i<< ": ";
	   cin >> a;
	   if(a%2==1)
	   {contador++;
        promedio=promedio+a;
	   } 
	}
	promedio= promedio/contador;
	cout << "El promedio de los numeros impares es: " << promedio <<endl;
	getch();
	return(0);

}
